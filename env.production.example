# Copy to .env and fill in values

# Data dir on the VPS for persistent files (uploads)
APP_DATA_DIR=/opt/mk-news

# Domain / canonical site URL
NEXT_PUBLIC_SITE_URL=https://mehmetkucuk.nl

# Admin API/auth secret (generate a long random string)
ADMIN_JWT_SECRET=change_me_to_a_long_random_secret

# Seed admin credentials (only used on first seed)
ADMIN_EMAIL=admin@mehmetkucuk.nl
ADMIN_PASSWORD=change_me_to_a_strong_password

# Postgres
POSTGRES_USER=news
POSTGRES_PASSWORD=change_me_to_a_strong_db_password
POSTGRES_DB=news

# Bot
NEWS_BOT_ENABLED=true

# Optional
# REDIS_URL=redis://...
# RESEND_API_KEY=
# GEMINI_API_KEY=
# GROQ_API_KEY=
# DEEPSEEK_API_KEY=
# FAL_API_KEY=
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
